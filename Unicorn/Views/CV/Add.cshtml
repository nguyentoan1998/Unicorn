@model Unicorn.Models.CV

@{
    ViewData["Title"] = "Thêm mới chức vụ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}<

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý Chức vụ</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-action="Index">Chức vụ</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<!-- Main content -->
<section class="content">
    <!-- Default box -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Thông tin thêm mới Chức vụ</h3>
        </div>
        <form asp-action="Add" asp-controller="CV" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="card-body row">

                <div class="col-5">
                    <div class="col-sm-6">
                        <div class="form-group">
                            <label asp-for="ID_CV" class="control-label">Mã chức vụ</label>
                            <input asp-for="ID_CV" class="form-control" autocomplete="off" />
                            <span asp-validation-for="ID_CV" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label">Tên chức vụ</label>
                            <input asp-for="Name" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Ghi_chu" class="control-label">Ghi chú</label>
                            <input asp-for="Ghi_chu" class="form-control" autocomplete="off" />
                            <span asp-validation-for="Ghi_chu" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <a asp-action="Index" class="btn btn-primary">Trở lại</a>
                            <input type="submit" value="Lưu" class="btn btn-success" />
                        </div>
                    </div>
                </div>
            </div>

        </form>
        <!-- /.card-body -->
        <div class="card-footer">
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->
</section>
<!-- /.content -->
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
