@model IEnumerable<Unicorn.Models.NVL>

@{
    ViewData["Title"] = "Danh sách Nguyên vật liệu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script src="~/lib/jquery/dist/jquery.min.js"></script>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Quản lý Nguyên vật liệu</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Home">Home</a></li>
                    <li class="breadcrumb-item active">Nguyên vật liệu</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>
<div id="NVL"></div>

<!-- Main content -->
<!-- /.content -->
<!-- Content Header (Page header) -->
<section class="content">
    <div class="container-fluid">
        <div class="card-header">
            <h3 class="card-title">Danh sách nguyên vật liệu</h3>
            <div class="card-tools">
                <a asp-action="Create" class="btn btn-success fa fa-plus">Thêm mới</a>
            </div>
        </div>
        <div class="card-body">
            <table id="tblNVL" class="display nowrap" style="width:100%">
                <thead>
                    <tr>
                        <th>Hình ảnh</th>
                        <th>Mã vật liệu</th>
                        <th>Tên vật liệu</th>
                        <th>Loại vật liệu</th>
                        <th>Đơn vị tính</th>
                        <th>Kích thước</th>
                    </tr>
                </thead>
                <tbody>

                </tbody>
            </table>
        </div>
    </div>
</section>


@*Scrip*@


<script>
    //Delete
    $(document).ready(function () {
        $('body').on('click', '.btnDelete', function () {
            var id = $(this).data("id");
            var conf = confirm('Bạn có muốn xóa Nguyên vật liệu này khỏi danh sách không??');
            if (conf === true) {
                $.ajax({
                    url: '/NVL/delete',
                    type: 'Post',
                    data: { id: id },
                    success: function (rs) {
                        if (rs.success) {
                            $('#trow_' + id).remove();
                        }
                    }
                })
            }
        });
        $('#tblNVL').dataTable({
            "processing": true,
            "serverSide": true,
            "filter": true,
            "ajax": {
                "url": "/Appi/GetNVL",
                "type": "POST",
                "datatype": "json"
            },
            "columnDefs": [{
                "targets": [0],
                "visible": false,
                "searchable": false
            }],
            "columns": [
                { "data": "Image", "name": "Hình ảnh", "autoWidth": true },
                { "data": "ID_NVL", "name": "Mã vật liệu", "autoWidth": true },
                { "data": "Name", "name": "Tên vật liệu", "autoWidth": true },
                { "data": "ID_Loai", "name": "Loại vật liệu", "autoWidth": true },
                { "data": "ID_DVT", "name": "Đơn vị tính", "autoWidth": true },
                { "data": "Size", "name": "Kích thước", "autoWidth": true },
                {
                    "render": function (data, row) { return "<a href='#' class='btn btn-danger' onclick=DeleteCustomer('" + row.id + "'); >Delete</a>"; }
                },
            ]
            buttons: [
                'copy', 'csv', 'excel', 'pdf', 'print'
            ]
        });
    })
</script>


